                          <label class="radio inline">{{form_label(edit_form.gender) }}</label>
                          {{form_widget(edit_form.gender) }}
                        </div>
                      </div>
                      
                      <div class="control-group">
                        <label class="control-label">{{form_label(edit_form.contactPerson) }}</label>
                        <div class="controls">
                            {{form_widget(edit_form.contactPerson) }}
