                          {{form_widget(edit_form.contactMobile) }}
                          <label class="radio inline">{{form_label(edit_form.contactPhone) }}</label>
                          {{form_widget(edit_form.contactPhone) }}
                        
                      </div>
                        </div>
                      
                      <div class="control-group">
                        <label class="control-label">{{form_label(edit_form.address) }}</label>
                        <div class="controls">
                            {{form_widget(edit_form.address) }}
                        </div>
                      </div>
                          
                       <div class="control-group">
                        <label class="control-label">{{form_label(edit_form.services) }}</label>
                        <div class="controls">
                            {#form_widget(edit_form.services)#}
                                {% for service in edit_form.services %}
                                <div class="wrapper_btn">
                                {{form_widget(service) }} 
                                <label class="radio inline">{{form_label(service) }}</label>
                                    
                                {% if service.vars.checked %}
                                <div class="btn_div"><span class="fs1" aria-hidden="true"></span><a href="javascript:;">Contract</a></div>
                                {% endif %}
</div><br>
                                {% endfor %}
                        </div>
                      </div>   
                          
                          
                          
                           <fieldset>
    <legend>Details address:</legend>
                          <div class="control-group">
                              <label class="control-label">{{form_label(edit_form.region) }}</label>
                        <div class="controls">
                          {{form_widget(edit_form.region) }}
                          
                         <label class="radio inline">{{form_label(edit_form.part) }}</label>
                          {{form_widget(edit_form.part) }}   
                         
                         <label class="radio inline">{{form_label(edit_form.gada) }}</label>
                          {{form_widget(edit_form.gada) }} 
                        </div>
                      </div>
                           
                      <div class="control-group">
                              <label class="control-label">{{form_label(edit_form.street) }}</label>
                        <div class="controls">
                          {{form_widget(edit_form.street) }}
                         <label class="radio inline">{{form_label(edit_form.house) }}</label>
                          {{form_widget(edit_form.house) }}   
                        </div>
                      </div>
                          
                     <div class="control-group">
                              <label class="control-label">{{form_label(edit_form.floor) }}</label>
                        <div class="controls">
                          {{form_widget(edit_form.floor) }}
                         <label class="radio inline">{{form_label(edit_form.flat) }}</label>
                          {{form_widget(edit_form.flat) }}   
                        </div>
                      </div>   
                          
                     <div class="control-group">
                              <label class="control-label">{{form_label(edit_form.notes) }}</label>
                        <div class="controls">
                          {{form_widget(edit_form.notes) }}
                        </div>
                      </div>
                           </fieldset>
                          
                           {% include "AcmeDemoBundle:Elements:pagingWidget.html.twig" with {'pagingWidget': pagingWidget,'redirect_url':'customers_edit'} %}
                           {% include "AcmeDemoBundle:Elements:customers_btn.html.twig" %}
                        
                      </form>
                  </div>
                </div>
              </div>
        </div>
