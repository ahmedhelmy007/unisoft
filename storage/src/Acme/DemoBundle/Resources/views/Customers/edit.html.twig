                        </div>
                      </div>
                      
                      <div class="control-group">
                        <label class="control-label">{{form_label(edit_form.civilId) }}</label>
                        <div class="controls">
                          {{form_widget(edit_form.civilId) }}
                                
                          <label class="radio inline">{{form_label(edit_form.mobile) }}</label>
                          {{form_widget(edit_form.mobile) }}
                         
