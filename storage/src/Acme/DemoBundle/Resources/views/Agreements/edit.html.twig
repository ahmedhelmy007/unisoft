                        <div class="controls">
                          {{form_widget(edit_form.customer.civilId) }}
                                
                          <label class="radio inline">{{form_label(edit_form.customer.mobile) }}</label>
                          {{form_widget(edit_form.customer.mobile) }}
                         
                          <label class="radio inline">{{form_label(edit_form.customer.phone) }}</label>
                          {{form_widget(edit_form.customer.phone) }}
                        
                          <label class="radio inline">{{form_label(edit_form.customer.fax) }}</label>
                          {{form_widget(edit_form.customer.fax) }}
                        </div>
                      </div>
                      
                      <div class="control-group">
                        <label class="control-label">{{form_label(edit_form.customer.email) }}</label>
                        <div class="controls">
                            {{form_widget(edit_form.customer.email) }}
