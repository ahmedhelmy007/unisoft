        {{form_row(edit_form.agreementDate) }}
        {{form_row(edit_form.agreementDate) }}
        <br>//=============================<br>
         <div class="control-group">
                        <label class="control-label">{{form_label(edit_form.customer.customerNo) }}</label>
                        <div class="controls controls-row">{{form_widget(edit_form.customer.customerNo) }}
                        </div>
                      </div>
                          
                          
                      <div class="control-group">
                        <label class="control-label">{{form_label(edit_form.customer.enName) }}</label>
                        <div class="controls">
                          {{form_widget(edit_form.customer.enName) }}
