                          {{form_widget(edit_form.customer.nationality) }}
                         
                          <label class="radio inline">{{form_label(edit_form.customer.gender) }}</label>
                          {{form_widget(edit_form.customer.gender) }}
                          {# edit_form.vars.value.customer.gender #}
                        </div>
                      </div>
                      
                      <div class="control-group">
                        <label class="control-label">{{form_label(edit_form.customer.address) }}</label>
                        <div class="controls">
                            {{form_widget(edit_form.customer.address) }}
                        </div>
                      </div>
        <br>//=============================<br>
        
        {{form_row(edit_form.sales) }}
        {{form_row(edit_form.discountPolicies) }}
        {{form_row(edit_form.agreementStatus) }}
