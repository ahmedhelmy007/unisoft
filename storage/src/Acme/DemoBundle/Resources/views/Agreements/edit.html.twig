{% extends "AcmeDemoBundle::layout.html.twig" %}
{% block title %}Agreements{% endblock %}
{% block content %} 
{% for flashMessage in app.session.flashbag.get('notice2') %}
          <div  class="alert alert-error">
      <button type="button" class="close" data-dismiss="alert">&times;</button> 
  <ul>
                    <li>{{ flashMessage|nl2br }}</li>
 </ul>
          </div>
{% endfor %} 
      
{% for flashMessage in app.session.flashbag.get('notice') %}
            <div  class="alert alert-block alert-success fade in">
               <h4 class="alert-heading">
                        Success!
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
               </h4>
                
		{{ flashMessage }}
	   </div>
        
{% endfor %} 
<div class="left-sidebar" style="margin-right: 0px;">
    <div class="row-fluid">
              <div class="span12">
                <div class="widget">
                  <div class="widget-header">
                    <div class="title " data-icon="î‚¸">
                      Customers
                    </div>
                  </div>
                   
                        
                 
                        
                  <div class="widget-body">

                      <form action="{{ path('agreements_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }} novalidate>
    {{ form_widget(edit_form._token) }}
        {{form_row(edit_form.agreementType) }}
        {{form_row(edit_form.transactionType) }}
        {{form_row(edit_form.agreementNo) }}
