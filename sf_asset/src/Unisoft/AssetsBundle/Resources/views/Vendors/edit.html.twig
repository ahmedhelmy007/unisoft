            </div>
           
            <div class="input">
            {{form_widget(edit_form.codeFax) }}
            <span class="input-error" data-title="please write a Fax Code" data-original-title="">
            <i class="icon-info-sign"></i>
            </span>
            </div>
             <div class="input">
             {{form_widget(edit_form.faxNo) }}
            <span class="input-error" data-title="please write a Fax Number" data-original-title="">
            <i class="icon-info-sign"></i>
            </span>        
            </div>        
            <div class="input">        
             {{form_widget(edit_form.accountNo) }}
              <span class="input-error" data-title="please write a Account Number" data-original-title="">
            <i class="icon-info-sign"></i>
            </span>
         <div class="gallery clearfix custo"> 
         <a class="assets_search" title="Search For Account Number" href="{{ url('SfServices_search', {'entity':'Vendors','keyword': 'param1','filed':'param2' })  }}?iframe=true&amp;width=100%&height=100%" rel="prettyPhoto" sourceId="form_accountNo" fieldName="accountNo"><img  src="{{ asset('bundles/template/images/ss.png') }}" width="40" height="40" /></a>
         </div>  
          </div>   

          </div></div>

          <div class="span6">
            <div class="padded" style="padding-bottom: 0">
             <div class="input">   
             {{form_widget(edit_form.country) }}
            <span class="input-error" data-title="please write a Country" data-original-title="">
            <i class="icon-info-sign"></i>
            </span>         
             </div>
             <div class="input">             
            {{form_widget(edit_form.codePhone) }}
             <span class="input-error" data-title="please write a Phone Code" data-original-title="">
            <i class="icon-info-sign"></i>
            </span>  
             </div>
             <div class="input">
             {{form_widget(edit_form.phoneNo) }}
            <span class="input-error" data-title="please write a Phone Number" data-original-title="">
            <i class="icon-info-sign"></i>
            </span>         
             </div>       
                       
             <div class="input">
               {{form_widget(edit_form.accountManager) }}
            <span class="input-error" data-title="please write a Account Manager" data-original-title="">
            <i class="icon-info-sign"></i>
            </span>
             </div>
             <div class="input">
             {{form_widget(edit_form.importingFields) }}
              <span class="input-error" data-title="please write a Importing Fields" data-original-title="">
            <i class="icon-info-sign"></i>
            </span>          
            </div>
            <div class="input">
             {{form_widget(edit_form.authorized) }}
              <span class="input-error" data-title="please write a Authorized" data-original-title="">
            <i class="icon-info-sign"></i>
            </span>          
            </div>
             <div class="input">
             {{form_widget(edit_form.website) }} 
             <span class="input-error" data-title="please write a Web-Site" data-original-title="">
            <i class="icon-info-sign"></i>
            </span>       
            </div>        
                   
              
    <br>
  
  
<script>
    var arabic_changed=0; 
    var english_changed=0;
    
    $("#form_arName").keyup(function () {
       arabic_changed=1;
   //    alert('arabic_changed:' +arabic_changed + ' and english_changed:' + english_changed);
       if(english_changed == 0){
           var value = $(this).val();
          document.getElementById("form_enName").value =(value );
       }
    });

  $("#form_enName").keyup(function () {
    english_changed=1;
       if(arabic_changed == 0){
    var value = $(this).val();
         document.getElementById("form_arName").value =(value );
  }
    });
    
    
    
    
</script>
 </div></div></div>
              
