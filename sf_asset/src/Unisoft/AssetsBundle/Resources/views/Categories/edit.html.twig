<form class="fill-up" action="{{ path('Categories_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }} >
    {{ form_widget(edit_form) }}
         <button type="submit" class="button blue large" style="height: 25px;">Edit</button>
    </form>
<br>
<form id="del" action="{{ path('Categories_delete', { 'id': entity.id }) }}" method="post">
                    {{ form_widget(delete_form) }} 
                  <button type="submit" class="button blue large" style="height: 25px;">Delete</button>
                </form>

  {% for flashMessage in app.session.flashbag.get('notice') %}
            <div  class="alert alert-success">
		<button type="button" class="close" data-dismiss="alert">&times;</button>
		{{ flashMessage }}
	   </div>
        
{% endfor %}        
