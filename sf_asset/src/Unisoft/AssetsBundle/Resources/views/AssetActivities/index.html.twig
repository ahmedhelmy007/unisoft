{% extends "UnisoftAssetsBundle::layout.html.twig" %}
{% block title %}Activities - Home{% endblock %}

{% block content %}
<h1>AssetActivities list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Changeinvalue</th>
            <th>Changedate</th>
            <th>Notes</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('activities_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.changeInValue }}</td>
            <td>{% if entity.changeDate %}{{ entity.changeDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{{ entity.notes }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('activities_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('activities_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('activities_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}