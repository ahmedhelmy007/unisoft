{% extends "UnisoftAssetsBundle::layout.html.twig" %}
{% block title %}Assets - Home{% endblock %}

{% block content %}
<h1>AssetActivities</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Changeinvalue</th>
            <td>{{ entity.changeInValue }}</td>
        </tr>
        <tr>
            <th>Changedate</th>
            <td>{{ entity.changeDate|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Notes</th>
            <td>{{ entity.notes }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('activities') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('activities_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('activities_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}