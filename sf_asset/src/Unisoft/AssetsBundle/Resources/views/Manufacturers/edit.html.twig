<script>
    var arabic_changed=0; 
    var english_changed=0;
    
    $("#form_arName").keyup(function () {
       arabic_changed=1;
   //    alert('arabic_changed:' +arabic_changed + ' and english_changed:' + english_changed);
       if(english_changed == 0){
           var value = $(this).val();
          document.getElementById("form_enName").value =(value );
       }
    });

  $("#form_enName").keyup(function () {
    english_changed=1;
       if(arabic_changed == 0){
    var value = $(this).val();
         document.getElementById("form_arName").value =(value );
  }
    });
    
    
    
    
</script>
